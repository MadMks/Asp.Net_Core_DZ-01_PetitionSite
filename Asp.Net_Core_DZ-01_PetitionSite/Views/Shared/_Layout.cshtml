<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    <header class="navbar navbar-light bg-light">
        <div class="container">
            <div class="row">
                <nav class="col-12">

                    <ul class="nav nav-pills">

                        <li class="nav-item">
                            @Html.ActionLink("Главная", "Index", "Home",
                                new { area = "" }, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Петиции", "Active", "Petition",
                                new { area = "" }, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Добавить петицию", "Add", "Petition",
                                new { area = "" }, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Архив", "All", "Petition",
                                new { area = "" }, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Контакты", "Contact", "Home",
                                new { area = ""}, new { @class = "nav-link"})
                        </li>

                        @*<li class="nav-item">
                                @Html.MainNavLink("Главная", "Index", "Home")
                            </li>
                            <li class="nav-item">
                                @Html.MainNavLink("Петиции", "Active", "Petition")
                            </li>
                            <li class="nav-item">
                                @Html.MainNavLink("Добавить петицию", "Add", "Petition")
                            </li>
                            <li class="nav-item">
                                @Html.MainNavLink("Архив", "All", "Petition")
                            </li>
                            <li class="nav-item">
                                @Html.MainNavLink("Контакты", "Contact", "Home")
                            </li>*@
                    </ul>

                </nav>
            </div>
        </div>
    </header>

    <main class="mt-5">
        <div class="container">
            @RenderBody()
        </div>
    </main>


    <footer>
        <div class="container">
            <p>&copy; @DateTime.Now.Year - Петиции</p>
        </div>
    </footer>


</body>
</html>
